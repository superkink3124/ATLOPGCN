{
    "experiment": "gcnii",
    "experiment_dir": "experiments",
    "train": {
        "optimizer": {
            "name": "adamw",
            "lr": 0.001,
            "weight_decay": 0.0001
        },
        "loss": {
            "name": "bce",
            "arguments": {
                "pos_weight": 1
            }
        },
        "lr_scheduler": {
            "arguments": {
                "warmup_steps": 10000
            },
            "name": "cosine_with_warmup"
        },
        "gradient_clipping": 5,
        "batch_size": 2,
        "batch_max_tokens": null,
        "eval_interval": 10000,
        "log_interval": 100,
        "num_epochs": 21,
        "lr_decay_step": 1000
    },
    "model": {
        "encoder": {
            "elmo_dim": 1024,
            "use_char": false,
            "char_embedding_dim": 30,
            "kernel_size": 5,
            "n_filters": 30,
            "use_pos": false,
            "pos_embedding_dim": 10,
            "lstm_hidden_dim": 300,
            "lstm_num_layers": 1,
            "drop_out": 0
        },
        "gnn": {
            "gnn_type": "gcnii",
            "node_type_embedding": 50,
            "args": {
                "num_layers": 4,
                "drop_out": 0.2,
                "drop_edge": 0,
                "alpha": 0.1,
                "lambda": 1
            }
        },
        "use_ner": false,
        "ner_classifier": {
            "hidden_dim": 150,
            "ner_classes": 5
        },
        "classifier": {
            "use_hidden_layer": false,
            "hidden_layer_dim": 64,
            "num_classes": 2,
            "drop_out": 0.5
        }
    },
    "data": {
        "train_file_path": "../data/rawdata/CDR_TrainingSet.PubTator.txt",
        "dev_file_path": "../data/rawdata/CDR_DevelopmentSet.PubTator.txt",
        "test_file_path": "../data/rawdata/CDR_TestSet.PubTator.txt",
        "use_title": true,
        "mesh_filtering": true,
        "mesh_path": "../data/2017MeshTree.txt",
        "saved_data_path": "../data/prepared_data/"
    }
}
